%h1 Items
%table{:class => "table table-striped"}
  %thead
    %tr
      %th ID
      %th
        = t("activerecord.attributes.item.title", :default => t("activerecord.labels.title", :default => "Title"))
      %th Created at
      %th Actions
  %tbody
    - @items.each do |item|
      %tr
        %td= item.id
        %td= link_to item.title, item_path(item)
        %td= item.created_at
        %td
          = link_to "Show", item_path(item)
          = link_to "Edit", edit_item_path(item)
          = link_to "Destroy", item_path(item), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"

= link_to "New", new_item_path, :class => 'btn btn-primary'
